<% include partials/header %>

  <div class="container">
      <div class="jumbotron">
        <h1 class="display-4">Welcome to the Stock Lookup Application</h1>
        <p class="lead">This is a simple application used for basic stock market research. The data provided comes from the <a href="https://iextrading.com/">IEXTrading API</a></p>
        <a href="#" class="btn btn-primary btn-lg">Get Started</a>
      </div>
  </div>

  <div class="container">
    <h2><strong>Recent Market News</strong></h2>
    <hr>
    <%for (var i = 0; i < data.length; i++){%>
      <div class="card" style="margin-bottom:10px;">
        <img src="<%=data[i].image%>" alt="">
        <div class="card-body">
          <h5 class="card-title"><strong><%=data[i].headline%></strong></h5>
          <p class="card-text"><%=data[i].summary%></p>
          <a href="<%=data[i].url%>" class="btn btn-primary">Read More</a>
        </div>
      </div>
    <%}%>
  </div>


<% include partials/footer %>
